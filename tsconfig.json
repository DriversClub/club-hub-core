{
    "compilerOptions": {
        "outDir": "./dist/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
		"jsx": "react",
		"declaration": true,
		"lib": ["dom", "es2015", "es5", "es6"],
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        ".git",
        "dist"
    ]
}